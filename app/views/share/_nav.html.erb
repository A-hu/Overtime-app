<div class="logo">
  <h1>Time Tracker</h1>
</div>

<% if current_user.present? %>
  <nav class="custom-nav navbar navbar-default navbar-inverse navbar-static-top" role="navigation">
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="<%= active?(root_path) %>">
          <%= link_to "", root_path, class: 'glyphicon glyphicon-home' %>
        </li>
        <li class="<%= active?(posts_path) %>">
          <%= link_to "Entries", posts_path %>
        </li>

        <%= render "share/audit_log_tab" if policy(AuditLog).index?  %>

        <li class="<%= active?(new_post_path) %>">
          <%= link_to "Request Overtime", new_post_path, id: 'new_post_from_nav' %>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.full_name if current_user.present? %><strong class="caret"></strong></a>
          <ul class="dropdown-menu">

            <% if current_user.try(:type) == "AdminUser" %>
              <li>
                <%= link_to "Admin Dashboard", admin_root_path %>
              </li>
              <li class="divider"></li>
            <% end %>

            <li>
              <%= link_to "Logout", destroy_user_session_path, method: :delete %>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
<% end %>

